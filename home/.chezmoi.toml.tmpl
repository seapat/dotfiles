encryption = "age"
mode = "file" # symlink mode does not work for encrypted or private files, can be buggy
progress = true
pager = "less -R"

[data]
    username = "seapat"
    email = {{ $email | quote }}
    chassisType = {{ $chassisType | quote }}
    cores = {{ $cpuCores }}
    threads = {{ $cpuThreads }}

    {{- $isWork := promptBoolOnce . "isWork" "Install Work Packages?" false -}}
    {{- $isGaming := promptBoolOnce . "isGaming" "Install Game launchers and tools?" false -}}
    {{- $isHome := promptBoolOnce . "isHome" "Setup personal tools?" false -}}
    isWork = {{ $isWork }}
    isGaming = {{ $isGaming }}
    isHome = {{ $isHome }}
